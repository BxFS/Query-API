.scroll-wrapper{
  width: 30%;
  display: inline-block;
  margin: auto;
}


.item-wrapper{
  font-size: 14px;
  color: #fff;
  background-color: #9bb1e9;
  height: 60px;
  display: flex;
  margin-bottom: 1px;
  justify-content: center;
  align-items: center;
  padding: 0 10px;
}

.item-wrapper-hover{
  background-color: #90a5da;
}

.side-content{
  position: fixed;
  top: 0;
  display: inline-block;
  width: 70%;
  vertical-align: top;
}

.navi{
  text-align: center;
  font-size: 14px;
  padding:10px;
  margin: auto;
  display: block;
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom:0;
  box-shadow: 0px 0px 10px #d8d8d8;
}
