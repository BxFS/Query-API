.container {
  height: 95%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.table {  
  border: 2px solid darkgray;  
  width: 90%;  
  margin-top: 1rem;  
  margin-right: 1rem;  
  margin-left: 1rem;  
}  

.tr {  
  display: flex;  
  width: 100%;  
  justify-content: center;  
  height: auto;  
  align-items: center;  
  min-height: 3rem; 
}  
.td {  
    width:100%;  
    justify-content: center;  
    align-items: center;
    display: flex;  
    text-align: center;  
    border-right: 2px solid #ddd;  
    height: 100%;  
}  
.td-1 {  
    width:100%;  
    justify-content: center; 
    align-items: center; 
    display: flex;  
    text-align: center;  
    border-right: 2px solid #ddd;  
    height: 100%;  
}  
.td-2 {  
    width:100%;  
    justify-content: center;  
    align-items: center;
    text-align: left;  
    display: flex;
    height: 100%;  
    max-width: 100%;  
}  
.bg-w{  
  background: #afb4db;  
}  
.bg-g{  
  background: #E6F3F9;  
}  
.bg-g2{  
  background: #fff;  
}  
.th {  
  width: 100%;  
  justify-content: center;  
  color: #fff;  
  display: flex;  
  height: 3rem;  
  align-items: center;  
  border-right: 2px solid #ddd;  
}  
.th-2 {  
  width: 100%;  
  justify-content: center;  
  color: #fff;  
  display: flex;  
  height: 3rem;  
  align-items: center;  
  max-height:  3rem;  
  max-width: 100%;  
}
.th-title {  
  width: 100%;  
  justify-content: center;  
  color: #fff;  
  display: flex;  
  height: 3rem;  
  align-items: center;  
  max-height:  3rem;  
  max-width: 100%;  
}
.th-text {  
  width: 100%;  
  justify-content: center;  
  color: #000;  
  display: block;  
  text-align: center;  
  align-items: center;   
  max-width: 100%;  
  font-size:16px;
} 
.ship-tr {  
  display: flex;  
  width: 100%;  
  justify-content: center;  
  height: 4rem;  
  align-items: center;  
} 
.ship-text {  
  width: 100%;  
  justify-content: center;  
  color: #000;  
  display: block;  
  text-align: center;  
  align-items: center;   
  max-width: 100%;  
  font-size:16px;
} 
.hideView{
  display: none; 
} 
.mapimg {  
  width: 90%;  
  margin-top: 0.5rem;  
  margin-right: 1rem;  
  margin-left: 1rem;  
}  
